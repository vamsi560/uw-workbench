# Dockerfile for LLM Processing Microservice
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-llm-service.txt .
RUN pip install --no-cache-dir -r requirements-llm-service.txt

# Copy application code
COPY llm_microservice.py .
COPY llm_service.py .
COPY config.py .

# Create non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8001/api/health')"

# Run the application
CMD ["python", "llm_microservice.py"]